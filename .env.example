# AgentDaf1 Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=AgentDaf1
APP_VERSION=1.1.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://agentdaf1:${DB_PASSWORD:-password}@postgres:5432/agentdaf1
DB_HOST=postgres
DB_PORT=5432
DB_NAME=agentdaf1
DB_USER=agentdaf1
DB_PASSWORD=password
POSTGRES_DB=agentdaf1
POSTGRES_USER=agentdaf1
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8082"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["xlsx", "xls", "csv", "json"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# WebSocket Configuration
WEBSOCKET_PORT=8004
WEBSOCKET_PATH=/ws
WEBSOCKET_HEARTBEAT_INTERVAL=30

# External Services Configuration
GITHUB_TOKEN=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=
GITHUB_API_URL=https://api.github.com

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # 1 minute

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600  # 1 hour
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Development Configuration
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILING=false

# Production Configuration
PROD_SSL_CERT_PATH=/etc/ssl/certs/cert.pem
PROD_SSL_KEY_PATH=/etc/ssl/private/key.pem
PROD_NGINX_PORT=80
PROD_NGINX_SSL_PORT=443

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# Feature Flags
ENABLE_AUTHENTICATION=true
ENABLE_WEBSOCKETS=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_BACKUP=true

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_TAG=latest
DOCKER_BUILD_ARGS=

# Kubernetes Configuration (Optional)
KUBERNETES_NAMESPACE=agentdaf1
KUBERNETES_SERVICE_ACCOUNT=agentdaf1

# Third-party API Keys (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_LOG_LEVEL=DEBUG

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_PROFILER=false

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
SECURITY_CONTENT_TYPE_NOSNIFF=true
SECURITY_X_FRAME_OPTIONS=DENY
SECURITY_X_XSS_PROTECTION=1; mode=block

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self' ws: wss:"

# Mobile App Configuration (Optional)
MOBILE_API_KEY=
MOBILE_PUSH_NOTIFICATION_KEY=

# Analytics and Tracking
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=
ANALYTICS_TRACKING_ID=

# Legal and Compliance
PRIVACY_POLICY_URL=
TERMS_OF_SERVICE_URL=
COOKIE_CONSENT_ENABLED=true
GDPR_COMPLIANCE=true

# Custom Configuration
CUSTOM_CONFIG_FILE=
CUSTOM_ENV_VARS=
